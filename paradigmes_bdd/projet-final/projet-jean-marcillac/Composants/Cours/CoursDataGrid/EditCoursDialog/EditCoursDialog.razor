<MudDialog>
    <DialogContent>
    <MudText Typo="Typo.h6">Modifier le Cours</MudText>
    <MudTextField Label="Titre" @bind-Value="Cours.Titre" Variant="Variant.Outlined" Margin="Margin.Normal" />
    <MudTextField Label="Résumé" @bind-Value="Cours.Resume" Variant="Variant.Outlined" Margin="Margin.Normal" />
    <MudTextField Label="Contenu" @bind-Value="Cours.Contenu" Variant="Variant.Outlined" Margin="Margin.Normal" Lines="5" />
    <MudNumericField Label="Nombre de Places Disponibles" @bind-Value="Cours.NombreDePlacesDisponibles" Variant="Variant.Outlined" Margin="Margin.Normal" />
    <MudTextField Label="ID" Value="@Cours.Id.ToString()" ReadOnly="true" Variant="Variant.Outlined" Margin="Margin.Normal" />
    <MudTextField Label="ID Professeur" Value="@Cours.IdProfesseur.ToString()" ReadOnly="true" Variant="Variant.Outlined" Margin="Margin.Normal" />
</DialogContent>

<DialogActions>
    <MudButton OnClick="SaveChanges" Color="Color.Primary" Variant="Variant.Filled">Sauvegarder</MudButton>
    <MudButton OnClick="Cancel" Color="Color.Secondary" Variant="Variant.Outlined">Annuler</MudButton>
</DialogActions>
</MudDialog>
