@page "/"
@using MudBlazor
@using projet_jean_marcillac.Modeles

<h1>Panel Prof</h1>

<MudDataGrid T="Cours" Items="@Cours" ReadOnly="true" Bordered="true" Dense="true"
             EnablePaging="false" ShowQuickFilter="false" ShowFilteringOptions="false">
    <Columns>
        <PropertyColumn Property="c => c.Id" Title="ID" Editable="false" />
        <PropertyColumn Property="c => c.Titre" Title="Titre" />
        <PropertyColumn Property="c => c.Resume" Title="Résumé" />
        <PropertyColumn Property="c => c.Contenu" Title="Contenu" />
        <PropertyColumn Property="c => c.NombreDePlacesDisponibles" Title="Places Disponibles" />
        <PropertyColumn Property="c => c.IdProfesseur" Title="ID Professeur" Editable="false" />
        
        <!-- Colonne pour le bouton "Éditer" -->
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Primary" 
                               OnClick="() => OpenEditCourseDialog(context.Item)" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
